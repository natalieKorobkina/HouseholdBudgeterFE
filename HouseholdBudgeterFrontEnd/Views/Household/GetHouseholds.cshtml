@model List<HouseholdBudgeterFrontEnd.Models.Domain.Household>
@{
    ViewBag.Title = "Your households";
}

<hr />
<!--Show all households-->
@if (Model != null || Model.Any())
{
    <table id="table_id" class="table-striped table-bordered compact" style="width:100%">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Description</th>
                <th>Created</th>
                <th>Updated</th>
                <th>Edit</th>
                <th>See Users</th>
                <th>Invite User</th>
                <th>Leave</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var household in Model)
            {
            <tr>
                <td>@household.Id</td>
                <td>@household.Name</td>
                <td>@household.Description</td>
                <td>@household.Created.ToString("dd-MM-yyyy HH:mm")</td>
                <td>
                    @if (household.Updated != null)
                    {
                        household.Updated.Value.ToString("dd-MM-yyyy HH:mm");
                    }
                </td>
                <td>
                    <div class="justify-content-around flex-b">
                        <a title="Edit Household" href="@Url.Action("Edit", "Household", new { id = household.Id })">
                            <i class="ti-pencil text-primary"></i>
                        </a>
                    </div>
                </td>
                <td>
                    <div class="justify-content-around flex-b">
                        <a title="See All Members" href="@Url.Action("GetUsers", "Household", new { id = household.Id })">
                            <i class="ti-pencil text-primary"></i>
                        </a>
                    </div>
                </td>
                <td>
                    <div class="justify-content-around flex-b">
                        <a title="Invite Users To Household" href="@Url.Action("Invite", "Household", new { id = household.Id })">
                            <i class="ti-pencil text-primary"></i>
                        </a>
                    </div>
                </td>
                <td>
                    <div class="justify-content-around flex-b">
                        <form method="post" action="@Url.Action("Leave", "Household", new { id = household.Id })">
                            <a href="#" title="Leave Household" style="color:black" class="actionLeave">
                            <i class="ti-trash"></i> Leave</a>
                        </form>
                    </div>
                </td>
            </tr>
            }
    </table>
}

@section scripts {
    <script type="text/javascript">
        $(document).ready(function () {
            $('#table_id').DataTable();
        });
    </script>
    <script src="~/Scripts/scriptAction.js" type="text/javascript"></script>
}