@model TransactionsViewModel
@{
    ViewBag.Title = "Transactions of Bank Account ";
}
<hr />
@if (ViewBag.Error != null)
{
    <div class="card" style="text-align:center">
        <div class="card-body">
            <h4 style="color:red">@ViewBag.Error</h4>
        </div>
    </div>
}
<br />

<h4>@ViewBag.Title @Model.BankAccountName</h4>
<hr />
@if (Model != null)
{
    <a href="@Url.Action("Create","Transaction", new {id = Model.BankAccountId })" class="btn btn-dark">Create</a>
    <br />
    <br />
    <table id="table_id" class="table-striped table-bordered compact" style="width:100%">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Description</th>
                <th>Created</th>
                <th>Updated</th>
                <th>Ammount</th>
                <th>Void</th>
                <th>Voided</th>
                <th>Edit</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Transactions.Any())
            {
                foreach (var transaction in Model.Transactions)
                {
                    <tr>
                        <td>@transaction.Id</td>
                        <td>@transaction.Title</td>
                        <td>@transaction.Description</td>
                        <td>@transaction.Created.ToString("dd-MM-yyyy HH:mm")</td>
                        <td>
                            @if (transaction.Updated != null)
                            {
                                @transaction.Updated.Value.ToString("dd-MM-yyyy HH:mm")
                            }
                        </td>
                        <td>@transaction.Ammount</td>
                        <td>
                            @if (!transaction.Voided)
                            {
                                <div class="justify-content-around flex-b">
                                    <form method="post" action="@Url.Action("VoidTransaction", "Transaction", new { id = transaction.Id, bankAccountId = Model.BankAccountId })">
                                        <a href="#" title="Void Transaction" class="actionVoid">
                                            <i class="ti-upload"></i>
                                        </a>
                                    </form>
                                </div>
                            }
                        </td>
                        <td>
                            @if (transaction.Voided && transaction.CanEdit)
                            {
                                <div class="justify-content-around flex-b">
                                    X
                                </div>
                            }
                        </td>
                        <td>
                            @if (transaction.CanEdit)
                            {
                                <div class="justify-content-around flex-b">
                                    <a title="Edit Transaction" href="@Url.Action("Edit", "Transaction", new { id = transaction.Id, bankAccountId = Model.BankAccountId })">
                                        <i class="ti-pencil text-primary"></i>
                                    </a>
                                </div>
                            }
                        </td>
                        <td>
                            @if (transaction.CanEdit)
                            {
                                <div class="justify-content-around flex-b">
                                    <form method="post" action="@Url.Action("Delete", "Transaction", new { id = transaction.Id, bankAccountId = Model.BankAccountId })">
                                        <a href="#" title="Delete Transaction" class="actionDelete">
                                            <i class="ti-trash"></i>
                                        </a>
                                    </form>
                                </div>
                            }
                        </td>
                    </tr>
                }
            }
    </table>
}

@section scripts {
    <script type="text/javascript">
        $(document).ready(function () {
            $('#table_id').DataTable();
        });
    </script>
    <script src="~/Scripts/scriptActionDelete.js" type="text/javascript"></script>
    <script src="~/Scripts/scriptActionVoid.js" type="text/javascript"></script>
}