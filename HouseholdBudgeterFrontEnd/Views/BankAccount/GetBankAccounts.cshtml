@model BankAccountsViewModel
@{
    ViewBag.Title = "Bank Accounts of household ";
}
<hr />
@if (ViewBag.Error != null)
{
    <div class="card" style="text-align:center">
        <div class="card-body">
            <h4 style="color:red">@ViewBag.Error</h4>
        </div>
    </div>
}
<br />
<!--Show all categories of houswhold-->
<h4>@ViewBag.Title @Model.HouseholdName</h4>
<hr />
@if (Model != null)
{
    if (Model.IsOwner)
    {
        <a href="@Url.Action("Create","BankAccount", new {id = Model.HouseholdId })" class="btn btn-dark">Create</a>
        <br />
    }
    <br />
    <table id="table_id" class="table-striped table-bordered compact" style="width:100%">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Description</th>
                <th>Transactions</th>
                <th>Created</th>
                <th>Updated</th>
                <th>Balance</th>
                <th>Update Balance</th>
                <th>Edit</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.BankAccounts.Any())
            {
                foreach (var bankAccount in Model.BankAccounts)
                {
            <tr>
                <td>@bankAccount.Id</td>
                <td>@bankAccount.Name</td>
                <td>@bankAccount.Description</td>
                <td>
                    <div class="justify-content-around flex-b">
                        <a title="Edit Household" href="@Url.Action("GetTransactions", "Transaction", new { id = bankAccount.Id })">
                            <i class="ti-alert text-primary"></i>
                        </a>
                    </div>
                </td>
                <td>@bankAccount.Created.ToString("dd-MM-yyyy HH:mm")</td>
                <td>
                    @if (bankAccount.Updated != null)
                    {
                        @bankAccount.Updated.Value.ToString("dd-MM-yyyy HH:mm")
                    }
                </td>
                <td>@bankAccount.Balance</td>
                <td>
                    @if (Model.IsOwner)
                    {
                        <div class="justify-content-around flex-b">
                            <form method="post" action="@Url.Action("UpdateBalance", "BankAccount", new { id = bankAccount.Id, householdId = Model.HouseholdId })">
                                <a href="#" title="Update Bank Account Balance" class="actionUpdate">
                                    <i class="ti-upload"></i>
                                </a>
                            </form>
                        </div>
                    }
                </td>
                <td>
                    @if (Model.IsOwner)
                    {
                        <div class="justify-content-around flex-b">
                            <a title="Edit Household" href="@Url.Action("Edit", "BankAccount", new { id = bankAccount.Id, householdId = Model.HouseholdId })">
                                <i class="ti-pencil text-primary"></i>
                            </a>
                        </div>
                    }
                </td>
                <td>
                    @if (Model.IsOwner)
                    {
                        <div class="justify-content-around flex-b">
                            <form method="post" action="@Url.Action("Delete", "BankAccount", new { id = bankAccount.Id, householdId = Model.HouseholdId })">
                                <a href="#" title="Delete Bank Account" class="actionDelete">
                                    <i class="ti-trash"></i>
                                </a>
                            </form>
                        </div>
                    }
                </td>
            </tr>
                }
            }
    </table>
}

@section scripts {
    <script type="text/javascript">
        $(document).ready(function () {
            $('#table_id').DataTable();
        });
    </script>
    <script src="~/Scripts/scriptActionDelete.js" type="text/javascript"></script>
    <script src="~/Scripts/scriptActionUpdate.js" type="text/javascript"></script>
}